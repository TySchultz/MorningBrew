# Uncomment the next line to define a global platform for your project

use_frameworks!
inhibit_all_warnings!

def normal_pods
    # normal pods
    pod 'HTMLString'
    pod 'SnapKit', :git => 'https://github.com/SnapKit/SnapKit.git', :branch => 'develop'
    pod 'SwiftyJSON', '~> 4.0'
    pod 'SwiftDate', '~> 5.0'
    pod 'AloeStackView'
    pod 'NVActivityIndicatorView'
    pod 'AlamofireImage'

    # prerelease pods
    pod 'StyledTextKit', :git => 'https://github.com/GitHawkApp/StyledTextKit.git', :branch => 'master'
    pod 'ContextMenu'
    pod 'Firebase/Core'
    pod 'Firebase/Database'
    pod 'Crashlytics'
    pod 'CodableFirebase'

    pod 'MarkdownView'
    
end

target 'MorningBrew' do
    
    platform :ios, '12.0'
    
    normal_pods
    
end
